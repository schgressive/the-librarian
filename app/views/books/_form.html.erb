<%= form_for @book, :html => {:multipart => true} do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :cover %><br>
    <% if @book.cover? %>
    <%= image_tag(@book.cover_url, class: "responsive_image") %>
    <% else image_tag("bookthumbnail.jpeg", class: "responsive_image") %>
    <% end %>
    <%= f.file_field :cover %><br>
    <%= f.hidden_field :cover_cache %><br>

  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :authors_names %><br>
    <%= f.text_field :authors_names %>
  </div>
  <div class="field">
    <%= f.label :editorial_name %><br>
    <%= f.text_field :editorial_name %>
  </div>
  <div class="field">
    <%= f.label :original_title %><br>
    <%= f.text_field :original_title %>
  </div>
  <div class="field">
    <%= f.label :translation %><br>
    <%= f.text_field :translation %>
  </div>
  <div class="field">
    <%= f.label :edition %><br>
    <%= f.number_field :edition %>
  </div>
  <div class="field">
    <%= f.label :edition_date %><br>
    <%= f.date_select :edition_date %>
  </div>
  <div class="field">
    <%= f.label :edition_place %><br>
    <%= f.text_field :edition_place %>
  </div>
  <div class="field">
    <%= f.label :publication_year %><br>
    <%= f.number_field :publication_year %>
  </div>
  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
